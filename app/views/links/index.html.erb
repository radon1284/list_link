<h1>Listing links</h1>

<table>
  <thead>
    <tr>
      <th>Link name</th>
      <th>Description</th>
      <th>Url</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.link_name %></td>
        <td><%= link.description %></td>
        <td><%= link.url %></td>
        <td><%= link.user %></td>
        <td><%= link.category %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
