<%- model_class = Link -%>
<div class="page-header">
  <h1><%=t '.title', :default => Link %></h1>
</div>
<%= link_to like_link_path(@link), method: :put do %>
<%= @link.score %> 
  <i class="fa fa-thumbs-up"></i>
<% end %> | 
<%= link_to dislike_link_path(@link), method: :put do %>
  <i class="fa fa-thumbs-down"></i>
<% end %>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:link_name) %></dt>
      <dd><pre class="prettyprint"><%= @link.link_name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @link.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:url) %></dt>
      <dd><pre class="prettyprint"><%=link_to @link.url, @link.url, target: "blank"  %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              links_path, :class => 'btn btn-default'  %>
  <% if @link.user == current_user %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_link_path(@link), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              link_path(@link),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>

